{
  "compilerOptions": {
    // Enables stricter inference for data properties on `this`
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "target": "es2016",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "exclude": ["**/*.spec.js", "**/*.spec.jsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.vue", "**/*.json"]
}
